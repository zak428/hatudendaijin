<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/black"
    android:gravity="bottom"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="260dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="30dp"
        android:src="@drawable/souri" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/daijin" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="260dp"
        android:layout_gravity="right|bottom"
        android:layout_marginLeft="10dp"
        android:src="@drawable/hisho" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/heart" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/heart" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/heart" />
    <ImageView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hint"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_gravity="bottom"
        android:background="@drawable/hukidasi" >

        <TextView
            android:id="@+id/text"
            android:layout_width="530dp"
            android:layout_height="400dp"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignParentLeft="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="25dp"
            android:layout_height="31dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/text"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/button" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/feedback"
        android:layout_width="179dp"
        android:layout_height="119dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" >

        <TextView
            android:id="@+id/feedbacktext"
            android:layout_width="181dp"
            android:layout_height="119dp"
            android:background="@drawable/feedback"
            android:padding="15dp"
            android:text="@string/feedback"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/feedbackRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:text="@string/feedbackrank"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/window"
        android:layout_width="484dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/window" >

        <LinearLayout
            android:id="@+id/seekbars"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/para0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原子力:0%"
                android:textColor="#000000"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seekBar0"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/para1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="石炭:50%"
                android:textColor="#000000"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50" />

            <TextView
                android:id="@+id/para2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天然ガス:50%"
                android:textColor="#000000"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50" />

            <TextView
                android:id="@+id/para3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="太陽光:0%"
                android:textColor="#000000"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@android:drawable/ic_menu_agenda" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/btn_star" />

        <com.example.hatudendaijin.GraphView
            android:id="@+id/view1"
            android:layout_width="270dp"
            android:layout_height="170dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageButton2" />

        <TextView
            android:id="@+id/tpara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view1"
            android:layout_alignTop="@+id/view1"
            android:text="合計:100%"
            android:textColor="#000000"
            android:textSize="10sp" />

    </RelativeLayout>

</FrameLayout>